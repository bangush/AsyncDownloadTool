<UserControl x:Class="ÜbungWPFCaliburnMicro.Views.KundenDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ÜbungWPFCaliburnMicro.Views"
             xmlns:viewModels="clr-namespace:ÜbungWPFCaliburnMicro.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.Resources>
        <viewModels:StringToIntConverter x:Key="StringToIntConverter" />
    </UserControl.Resources>

    <StackPanel VerticalAlignment="Center">
        <Label Content="Vorname"/>
        <TextBox Text="{Binding Vorname, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Content="Nachname"/>
        <TextBox Text="{Binding Nachname, UpdateSourceTrigger=PropertyChanged}" />
        <Label Content="Alter"/>
        <TextBox Text="{Binding Alter, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToIntConverter}}" />
    </StackPanel>
</UserControl>
